    <servlet-mapping>
        <servlet-name>myupload</servlet-name>
        <url-pattern>/myupload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveSchema</servlet-name>
        <url-pattern>/SaveSchema</url-pattern>
    </servlet-mapping>
